{
    "vhosts": [
        {
            "ip": "127.0.0.1",
            "port": 8081,
            "server_name": "localhost",
            "ssl_cert": "tests/certs/localhost.pem",
            "ssl_key": "tests/certs/localhost-key.pem",
            "proxy_pass": {
                "ip": "127.0.0.1",
                "port": 8000,
                "proxy_remove_header": [
                    "Header-Removed",
                    "HTTP_X_FORWARDED_PROTO"
                ],
                "proxy_set_header": {
                    "Foo": "Bar2",
                    "Bar": "Foo2"
                },
                "set_header": {
                    "Chief": "Lucas the spider"
                },
                "remove_header": [
                    "Tiger"
                ]
            }
        },
        {
            "ip": "0.0.0.0",
            "port": 8080,
            "server_name": "sub.localhost",
            "proxy_pass": {
                "upstream": "backendB"
            }
        }
    ],
    "upstreams": {
        "backendA": {
            "method": "round-robin",
            "hosts": [
                {
                    "ip": "127.0.0.1",
                    "port": 5000
                },
                {
                    "ip": "127.0.0.1",
                    "port": 5050,
                    "weight": 3
                }
            ]
        },
        "backendB": {
            "method": "failover",
            "hosts": [
                {
                    "ip": "127.0.0.1",
                    "port": 5000,
                    "health": "/tests/www/index.html"
                },
                {
                    "ip": "127.0.0.1",
                    "port": 5050,
                    "health": "/tests/www/index.html"
                }
            ]
        },
        "backendC": {
            "method": "fail-robin",
            "hosts": [
                {
                    "ip": "127.0.0.1",
                    "port": 5000,
                    "health": "/tests/www/index.html"
                },
                {
                    "ip": "127.0.0.1",
                    "port": 5050,
                    "weight": 3,
                    "health": "/tests/www/index.html"
                }
            ]
        }
    }
}