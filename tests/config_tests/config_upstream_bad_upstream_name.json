{
    "vhosts": [
        {
            "ip": "0.0.0.0",
            "port": 8080,
            "server_name": "sub.localhost",
            "proxy_pass": {
                "upstream": "wrong_name"
            }
        }
    ],
    "upstreams": {
        "backendA": {
            "method": "round-robin",
            "hosts": [
                {
                    "ip": "127.0.0.1",
                    "port": 5000
                },
                {
                    "ip": "127.0.0.1",
                    "port": 5050,
                    "weight": 3
                }
            ]
        },
        "backendB": {
            "method": "failover",
            "hosts": [
                {
                    "ip": "127.0.0.1",
                    "port": 5000,
                    "health": "/index.html"
                },
                {
                    "ip": "127.0.0.1",
                    "port": 5050,
                    "health": "/index.html"
                }
            ]
        },
        "backendC": {
            "method": "fail-robin",
            "hosts": [
                {
                    "ip": "127.0.0.1",
                    "port": 5000,
                    "health": "/index.html"
                },
                {
                    "ip": "127.0.0.1",
                    "port": 5050,
                    "weight": 3,
                    "health": "/index.html"
                }
            ]
        }
    }
}